        .image-upload-box:hover {
            border-color: var(--primary-color);
        }

        .upload-label {
            display: block;
            cursor: pointer;
            padding: 1rem;
            background: #f3f4f6;
            border-radius: 4px;
            margin-bottom: 0.5rem;
        }

        .upload-label:hover {
            background: #e5e7eb;
        }

        .image-preview {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 4px;
            display: none;
        }

        .variant-item {
            margin-bottom: 1rem;
