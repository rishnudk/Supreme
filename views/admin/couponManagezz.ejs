<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        /* Global Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Poppins", sans-serif;
}

body {
    background-color: #f5f7fa;
    color: #333;
    display: flex;
}

/* Admin Sidebar */
.sidebar {
    width: 250px;
    background: #1f2937;
    height: 100vh;
    padding: 20px;
    position: fixed;
    left: 0;
    top: 0;
    color: white;
}

/* Main Content */
.container {
    margin-left: 250px;
    padding: 20px;
    width: calc(100% - 250px);
}

/* Header */
.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 20px;
    border-bottom: 2px solid #ddd;
}

.header h1 {
    font-size: 22px;
    color: #1f2937;
}

/* Search & Add Section */
.search-section {
    display: flex;
    justify-content: flex-end;
    margin: 20px 0;
}

.add-coupon-btn {
    background-color: #1d4ed8;
    color: white;
    padding: 10px 15px;
    border-radius: 6px;
    font-size: 14px;
    border: none;
    cursor: pointer;
    transition: 0.3s;
}

.add-coupon-btn:hover {
    background-color: #3b82f6;
}

/* Coupon Table */
.coupon-table {
    width: 100%;
    border-collapse: collapse;
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.coupon-table th,
.coupon-table td {
    padding: 12px 15px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

.coupon-table th {
    background: #1f2937;
    color: white;
    text-transform: uppercase;
    font-size: 14px;
}

.coupon-table tr:hover {
    background: #f3f4f6;
}

.coupon-table td {
    font-size: 14px;
}

.coupon-table button {
    border: none;
    padding: 6px 12px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 12px;
    transition: 0.3s;
}

.coupon-table .edit-btn {
    background: #10b981;
    color: white;
}

.coupon-table .edit-btn:hover {
    background: #059669;
}

.coupon-table .delete-btn {
    background: #ef4444;
    color: white;
}

.coupon-table .delete-btn:hover {
    background: #dc2626;
}

/* Modal Overlay */
.modal-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
}

.modal {
    background: white;
    padding: 20px;
    border-radius: 8px;
    width: 400px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

.modal h2 {
    margin-bottom: 15px;
    font-size: 18px;
    color: #1f2937;
}

.modal label {
    display: block;
    font-size: 14px;
    margin-bottom: 5px;
    color: #333;
}

.modal input,
.modal select {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-bottom: 10px;
    font-size: 14px;
}

.modal button {
    width: 100%;
    padding: 10px;
    border: none;
    font-size: 14px;
    cursor: pointer;
    border-radius: 4px;
    margin-top: 10px;
    transition: 0.3s;
}

.modal button[type="submit"] {
    background: #1d4ed8;
    color: white;
}

.modal button[type="submit"]:hover {
    background: #3b82f6;
}

.modal button[type="button"] {
    background: #ef4444;
    color: white;
}

.modal button[type="button"]:hover {
    background: #dc2626;
}

/* Responsive Styles */
@media screen and (max-width: 1024px) {
    .container {
        margin-left: 0;
        width: 100%;
        padding: 15px;
    }

    .sidebar {
        width: 100%;
        height: auto;
        position: relative;
        padding: 10px;
        text-align: center;
    }

    .search-section {
        flex-direction: column;
        align-items: center;
    }

    .add-coupon-btn {
        width: 100%;
        text-align: center;
    }

    .modal {
        width: 90%;
    }
}

@media screen and (max-width: 768px) {
    .coupon-table th,
    .coupon-table td {
        font-size: 12px;
        padding: 10px;
    }

    .coupon-table button {
        font-size: 10px;
        padding: 4px 8px;
    }

    .modal {
        width: 85%;
    }
}

@media screen and (max-width: 480px) {
    .header h1 {
        font-size: 18px;
    }

    .add-coupon-btn {
        font-size: 12px;
        padding: 8px;
    }

    .modal {
        width: 95%;
    }

    .coupon-table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }
}

    </style>
</head>
<body>
    <%- include('../partials/adminSidebar') %>

    <div class="container">
        <div class="header">
            <h1>Coupon Management</h1>
        </div>
    
        <div class="search-section">
            <button class="add-coupon-btn" id="add-coupon-btn"><i class="fas fa-plus"></i> Add Coupon</button>
        </div>
    
        <!-- Coupon Table -->
        <table class="coupon-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Code</th>
                    <th>Discount</th>
                    <th>Expiry Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="coupon-table-body"></tbody>
        </table>
    </div>
    
    <!-- Add Coupon Modal -->
    <div class="modal-overlay" id="add-modal">
        <div class="modal">
            <h2>Add Coupon</h2>
            <form id="add-coupon-form">
                <label>Coupon Code</label>
                <input type="text" id="coupon-code" required>
    
                <label>Discount Type</label>
                <select id="discount-type">
                    <option value="percentage">Percentage</option>
                    <option value="flat">Flat</option>
                </select>
    
                <label>Discount Value</label>
                <input type="number" id="discount-value" required>
    
                <label>Expiry Date</label>
                <input type="date" id="expiry-date" required>
    
                <label>Status</label>
                <select id="status">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
    
                <button type="submit">Save</button>
                <button type="button" onclick="closeModal('add-modal')">Cancel</button>
            </form>
        </div>
    </div>
    
    <script>
        document.addEventListener("DOMContentLoaded", () => {
    const addCouponForm = document.getElementById("add-coupon-form");
    const couponTableBody = document.getElementById("coupon-table-body");

    // Fetch and Display Coupons
    async function loadCoupons() {
        const response = await fetch("/api/admin/coupons");
        const data = await response.json();
        if (data.success) {
            couponTableBody.innerHTML = data.coupons.map(coupon => `
                <tr>
                    <td>${coupon._id}</td>
                    <td>${coupon.code}</td>
                    <td>${coupon.discountValue} ${coupon.discountType === "percentage" ? "%" : "â‚¹"}</td>
                    <td>${new Date(coupon.expiryDate).toLocaleDateString()}</td>
                    <td>${coupon.isActive ? "Active" : "Inactive"}</td>
                    <td>
                        <button onclick="openUpdateModal('${coupon._id}', '${coupon.code}', '${coupon.discountType}', '${coupon.discountValue}', '${coupon.expiryDate}', '${coupon.isActive}')">Edit</button>
                        <button onclick="deleteCoupon('${coupon._id}')">Delete</button>
                    </td>
                </tr>
            `).join("");
        }
    }

    // Add Coupon
    addCouponForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const code = document.getElementById("coupon-code").value.trim();
        const discountType = document.getElementById("discount-type").value;
        const discountValue = document.getElementById("discount-value").value;
        const expiryDate = document.getElementById("expiry-date").value;
        const isActive = document.getElementById("status").value === "true";

        const response = await fetch("/admin/coupons/add", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ code, discountType, discountValue, expiryDate, isActive })
        });

        if (response.ok) {
            closeModal("add-modal");
            loadCoupons();
        } else {
            alert("Failed to add coupon");
        }
    });

    // Delete Coupon
    async function deleteCoupon(id) {
        if (!confirm("Are you sure you want to delete this coupon?")) return;

        await fetch(`/api/admin/coupons/delete/${id}`, { method: "DELETE" });
        loadCoupons();
    }

    // Load coupons on page load
    loadCoupons();
});

    </script>
</body>
</html>