<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/adminSidebar.css">
    <link rel="stylesheet" href="/css/orderManagement.css">
</head>
<body>
    <%- include('../partials/adminSidebar') %>

    <div class="container my-5">
        <!-- Header Section -->
        <header class="header d-flex justify-content-between align-items-center mb-4">
            <h1>Order Management</h1>
            <div class="search-section">
                <input type="text" id="search-input" class="form-control search-input" placeholder="Search by Order ID...">
                <button class="btn reset-btn" onclick="resetSearch()">
                    <i class="fas fa-sync-alt"></i> Reset
                </button>
            </div>
        </header>

        <!-- Orders Table -->
        <div class="card">
            <table class="table order-table table-hover">
                <thead>
                    <tr>
                        <th>Order Image</th>
                        <th>Product Name</th>
                        <th>Order ID</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="orderTableBody">
                    <% orders.forEach(order => { %>
                    <tr data-order-id="<%= order._id %>">
                        <td><img src="<%= order.image || 'https://via.placeholder.com/50' %>" alt="<%= order.productName %>" class="order-image"></td>
                        <td><%= order.productName %></td>
                        <td><%= order._id %></td>
                        <td><%= order.paymentMethod %></td>
                        <td>
                            <select class="form-select status-select" onchange="updateOrderStatus('<%= order._id %>', this.value)">
                                <option value="Pending" <%= order.status === 'Pending' ? 'selected' : '' %>>Pending</option>
                                <option value="Processing" <%= order.status === 'Processing' ? 'selected' : '' %>>Processing</option>
                                <option value="Shipped" <%= order.status === 'Shipped' ? 'selected' : '' %>>Shipped</option>
                                <option value="Delivered" <%= order.status === 'Delivered' ? 'selected' : '' %>>Delivered</option>
                                <option value="Cancelled" <%= order.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
                            </select>
                        </td>
                        <td><%= order.stock %></td>
                        <td>
                            <button class="action-btn cancel-btn" title="Cancel Order" onclick="cancelOrder('<%= order._id %>')">
                                <i class="fas fa-times"></i>
                            </button>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination mt-4">
            <span class="pagination-info">
                Showing <%= (page - 1) * limit + 1 %> to <%= Math.min(page * limit, total) %> of <%= total %> entries
            </span>
            <div class="pagination-buttons">
                <% if (page > 1) { %>
                    <a href="?page=<%= page - 1 %>&limit=<%= limit %>&search=<%= search %>" class="pagination-btn">Previous</a>
                <% } %>
                <% for (let i = 1; i <= totalPages; i++) { %>
                    <a href="?page=<%= i %>&limit=<%= limit %>&search=<%= search %>" class="pagination-btn <%= i === page ? 'active' : '' %>">
                        <%= i %>
                    </a>
                <% } %>
                <% if (page < totalPages) { %>
                    <a href="?page=<%= page + 1 %>&limit=<%= limit %>&search=<%= search %>" class="pagination-btn">Next</a>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
   
</body>
</html>