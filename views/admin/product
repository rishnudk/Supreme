function cropImage() {
    console.log("‚úÖ cropImage() function called!");

    if (!cropper) {
        console.error("‚ùå Cropper instance not found!");
        return;
    }

    const canvas = cropper.getCroppedCanvas({
        width: 600,
        height: 600
    });

    if (!canvas) {
        console.error("‚ùå Cropping failed. Canvas not created.");
        return;
    }

    canvas.toBlob(blob => {
        if (!blob) {
            console.error("‚ùå Blob creation failed.");
            return;
        }
        console.log("‚úÖ Image cropped and converted to blob");

        const index = currentImageInput.id.split('-').pop();
        console.log(`üÜî Extracted index: ${index}`);

        const previewElement = document.getElementById(`prod-preview${index}`);
        if (!previewElement) {
            console.error(`‚ùå Preview element not found for index ${index}`);
            return;
        }

        const formData = new FormData();
        formData.append("image", blob);

        console.log("üì§ Sending image to backend for Cloudinary upload...");

        fetch("/upload", {
            method: "POST",
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            if (data.imageUrl) {
                console.log("‚úÖ Cloudinary URL received:", data.imageUrl);
                processedImages.set(currentImageInput.id, data.imageUrl);
                previewElement.src = data.imageUrl;
                previewElement.style.display = 'block';
            } else {
                console.error("‚ùå No URL returned from server:", data);
            }
        })
        .catch(error => console.error("‚ùå Error uploading image:", error));

        document.getElementById('cropperModal').style.display = 'none';
        cropper.destroy();
        cropper = null; // Avoid memory leaks
    }, 'image/jpeg', 0.8);
}









function showCropper(imageSrc, index) {
    console.log("Showing cropper modal",index);
    const modal = document.getElementById('cropperModal');
    const cropperImage = document.getElementById('cropperImage');

    modal.style.display = 'block';
    cropperImage.src = imageSrc;

    if (cropper) {
        cropper.destroy();
    }

    cropper = new Cropper(cropperImage, {
        aspectRatio: 1,
        viewMode: 2,
        autoCropArea: 1,
        responsive: true,
        restore: false
    });
}







function cropImage() {
    console.log("‚úÖ cropImage() function called!");

    if (!cropper) {
        console.error("‚ùå Cropper instance not found!");
        return;
    }

    console.log("Cropping image...");
    const canvas = cropper.getCroppedCanvas({
        width: 600,
        height: 600
    });

    if (!canvas) {
        console.error("‚ùå Cropping failed. Canvas not created.");
        return;
    }

    canvas.toBlob(blob => {
        if (!blob) {
            console.error("‚ùå Blob creation failed.");
            return;
        }
        console.log("‚úÖ Image cropped and converted to blob");

        if (!currentImageInput) {
            console.error("‚ùå currentImageInput is undefined!");
            return;
        }

        const index = currentImageInput.id.split('-').pop();
        console.log(`üÜî Extracted index: ${index}`);

        const previewElement = document.getElementById(`prod-preview${index}`);
        if (!previewElement) {
            console.error(`‚ùå Preview element not found for index ${index}`);
            return;
        }

        const uploadBox = currentImageInput.closest('.prod-image-upload-box');
        if (!uploadBox) {
            console.error("‚ùå Upload box not found!");
            return;
        }

        const uploadLabel = uploadBox.querySelector('.prod-upload-btn');
        const removeButton = uploadBox.querySelector('.remove-image');

        console.log("Uploading to Cloudinary...");
        uploadToCloudinary(blob).then(url => {
            if (!url) {
                console.error("‚ùå Cloudinary upload failed!");
                return;
            }
            console.log("‚úÖ Uploaded to Cloudinary:", url);

            processedImages.set(currentImageInput.id, url);
            previewElement.src = url;
            previewElement.style.display = 'block';

            if (uploadLabel) uploadLabel.style.display = 'none';
            if (removeButton) removeButton.style.display = 'block';
        });

        console.log("üõ† currentImageInput:", currentImageInput ? currentImageInput.id : "undefined");


        document.getElementById('cropperModal').style.display = 'none';
        cropper.destroy();
        cropper = null; // Avoid memory leaks
    }, 'image/jpeg', 0.8);
}


















