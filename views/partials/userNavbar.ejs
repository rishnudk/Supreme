<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/css/user-navbar.css">
  
</head>
<body>






  <nav class="custom-navbar navbar navbar navbar-expand-md navbar-dark bg-dark" arial-label="Furni navigation bar">

    <div class="container">
      <a class="navbar-brand" href="/user/home">Supreme<span>.</span></a>
  
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsFurni" aria-controls="navbarsFurni" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
  
      <div class="collapse navbar-collapse" id="navbarsFurni">
        <ul class="custom-navbar-nav navbar-nav ms-auto mb-2 mb-md-0">
          <li class="nav-item active">
            <a class="nav-link" href="/user/home">Home</a>
          </li>
          <li><a class="nav-link" href="/user/shop">Shop</a></li>
        </ul>
  
        
        <ul class="custom-navbar-cta navbar-nav mb-2 mb-md-0 ms-5">
          <% if (user) { %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <%= user.name %>
              </a>
              
              <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="/user/account">Profile</a></li>
                <li><a class="dropdown-item" href="/user/logout">Logout</a></li>
              </ul>
            </li>
            <li><a class="nav-link" href="/user/cart"><img src="/images/cart.svg"></a></li>
            <li><a class="nav-link" href="/user/wishlist"><img src="/images/bag.svg"></a></li>
          <% } else { %>
            <li><a class="nav-link" href="/login">Login</a></li>
            <li><a class="nav-link" href="/user/signup">Signup</a></li>
        
          <% } %>
        </ul>
      </div>
    </div>
      
  </nav>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const userAuth = document.getElementById('user-auth');
      const user = {
        isLoggedIn: true 
      };
  
      if (user.isLoggedIn) {
        userAuth.innerHTML = `
          <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              ${user.name}
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><a class="dropdown-item" href="profile.html">Profile</a></li>
              <li><a class="dropdown-item" href="logout.html">Logout</a></li>
            </ul>
          </div>
        `;
      }
    });
  </script>
  
</body>
</html>