<!-- Sidebar -->
<div class="sidebar">
    <div class="sidebar-container">
      <!-- Brand Logo -->
      <div class="brand">
        <h3>
          <span class="lab la-staylinked"></span>
          vase
        </h3>
      </div>
  
      <!-- User Profile Section -->
      <div class="sidebar-avatar">
        <div>
          <img src="<%= user.avatar %>" alt="avatar">
        </div>
        <div class="avatar-info">
          <div class="avatar-text">
            <h4><%= user.name %></h4>
            <small><%= user.date %></small>
          </div>
          <span class="las la-angle-double-down"></span>
        </div>
      </div>
  
      <!-- Navigation Menu -->
      <div class="sidebar-menu">
        <ul>
          <li><a href="/dashboard" class="<%= currentPage === 'dashboard' ? 'active' : '' %>">
            <span class="las la-adjust"></span>
            <span>Dashboard</span>
          </a></li>
          <li><a href="/videos" class="<%= currentPage === 'videos' ? 'active' : '' %>">
            <span class="las la-video"></span>
            <span>Videos</span>
          </a></li>
          <li><a href="/analytics" class="<%= currentPage === 'analytics' ? 'active' : '' %>">
            <span class="las la-chart-bar"></span>
            <span>Analytics</span>
          </a></li>
          <li><a href="/schedule" class="<%= currentPage === 'schedule' ? 'active' : '' %>">
            <span class="las la-calendar"></span>
            <span>Schedule</span>
          </a></li>
          <li><a href="/account" class="<%= currentPage === 'account' ? 'active' : '' %>">
            <span class="las la-user"></span>
            <span>Account</span>
          </a></li>
        </ul>
      </div>
  
      <!-- AdSense Card -->
      <div class="sidebar-card">
        <div class="side-card-icon">
          <span class="lab la-codiepie"></span>
        </div>
        <div>
          <h4>Make AdSense</h4>
          <p>add ads to your videos to earn money</p>
        </div>
        <button class="btn btn-main btn-block">Create now</button>
      </div>
    </div>
  </div>