    <style>
        :root {
            --primary-color: #4F6367;
            --secondary-color: #B8D8D8;
            --accent-color: #FE5F55;
            --light-color: #F4F7F7;
            --dark-color: #2D3B3E;
            --text-color: #333333;
        }

        body {
            background-color: var(--light-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .wishlist-container {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.05);
            padding: 2rem;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }

        .wishlist-item {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            transition: all 0.3s ease;
        }

        .wishlist-item:hover {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .btn-accent {
            background-color: var(--accent-color);
            color: white;
            border: none;
        }

        .btn-accent:hover {
            background-color: #e5574e;
            color: white;
        }

        .btn-outline-accent {
            border: 1px solid var(--accent-color);
            color: var(--accent-color);
        }

        .btn-outline-accent:hover {
            background-color: var(--accent-color);
            color: white;
        }

        .empty-wishlist {
            text-align: center;
            padding: 3rem 1rem;
        }

        .empty-wishlist i {
            font-size: 4rem;
            color: var(--secondary-color);
            margin-bottom: 1rem;
        }

        .price-tag {
            color: var(--primary-color);
            font-weight: 600;
            font-size: 1.2rem;
        }

        .old-price {
            text-decoration: line-through;
            color: #999;
            font-size: 0.9rem;
            margin-right: 0.5rem;
        }

        .discount-badge {
            background-color: var(--accent-color);
            color: white;
            padding: 0.2rem 0.5rem;
            border-radius: 4px;
            font-size: 0.8rem;
            margin-left: 0.5rem;
        }

        .share-btn {
            color: var(--primary-color);
            background: none;
            border: none;
            font-size: 1.2rem;
            transition: color 0.3s;
        }

        .share-btn:hover {
            color: var(--accent-color);
        }

        .recommendation-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        .recommendation-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .recommendation-title {
            font-size: 1rem;
            margin: 0.5rem 0;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .stock-status {
            font-size: 0.8rem;
            margin-top: 0.5rem;
        }

        .in-stock {
            color: #28a745;
        }

        .low-stock {
            color: #ffc107;
        }

        .out-stock {
            color: #dc3545;
        }

        .remove-item {
            color: #6c757d;
            font-size: 1.2rem;
            transition: color 0.3s;
        }

        .remove-item:hover {
            color: var(--accent-color);
            cursor: pointer;
        }


        .swal-custom {
    border-radius: 12px;
    background: #F4F7F7; /* Light gray */
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    padding: 20px;
}

.swal-title-custom {
    font-family: 'Montserrat', sans-serif;
    font-size: 20px;
    font-weight: bold;
    color: #E5574E; /* Coral-red */
    margin-bottom: 10px;
}

.swal-text-custom {
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    color: #333333; /* Dark gray for readability */
}

.swal-confirm-custom {
    background-color: #E5574E; /* Coral-red */
    border: none;
    border-radius: 8px;
    padding: 8px 16px;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-weight: bold;
    color: #FFFFFF; /* White */
    transition: background-color 0.3s ease;
}

.swal-confirm-custom:hover {
    background-color: #F87168; /* Lighter coral-red */
}

.swal-cancel-custom {
    background-color: #FFFFFF; /* White */
    border: 1px solid #E5574E; /* Coral-red border */
    border-radius: 8px;
    padding: 8px 16px;
    font-family: 'Montserrat', sans-serif;
    font-size: 14px;
    font-weight: bold;
    color: #E5574E; /* Coral-red */
    transition: background-color 0.3s ease;
}

.swal-cancel-custom:hover {
    background-color: #F4F7F7; /* Light gray */
}

.swal2-timer-progress-bar {
    background: #E5574E; /* Coral-red */
}

/* Wishlist-specific styles */
.remove-item {
    background: none;
    border: none;
    color: #E5574E; /* Coral-red */
    font-size: 18px;
    cursor: pointer;
    padding: 0;
}

.remove-item:hover {
    color: #F87168; /* Lighter coral-red */
}
