document.addEventListener('DOMContentLoaded', function() {
  // Only initialize if the section exists
  if (!document.getElementById('featuredProductsSection')) return;
  
  // Elements with specific ID selectors
  const carousel = document.querySelector('#featuredProductsSection .product-carousel');
  const prevArrow = document.querySelector('#featuredProductsSection .prev-arrow');
  const nextArrow = document.querySelector('#featuredProductsSection .next-arrow');
  const dotsContainer = document.querySelector('#featuredProductsSection .carousel-dots');
  
  // Check if elements exist before proceeding
  if (!carousel || !prevArrow || !nextArrow || !dotsContainer) {
    console.error('Featured Products carousel elements not found');
    return;
  }
  
  // Variables
  const productCards = document.querySelectorAll('#featuredProductsSection .product-card');
  let currentIndex = 0;
  let productsPerView = 4; // Default for desktop
  let scrollAmount = 1; // Scroll one product at a time
  
  // Set initial state
  function initCarousel() {
    // Determine products per view based on screen width
    if (window.innerWidth > 1199) {
      productsPerView = 4; // Desktop
    } else if (window.innerWidth > 991) {
      productsPerView = 3; // Large tablets
    } else if (window.innerWidth > 575) {
      productsPerView = 2; // Small tablets
    } else {
      productsPerView = 1; // Mobile
    }
    
    // Calculate total possible positions
    // This ensures we stop scrolling when the last set of products is visible
    const totalPositions = Math.max(0, productCards.length - productsPerView);
    
    // Create dots - one for each position
    dotsContainer.innerHTML = '';
    for (let i = 0; i <= totalPositions; i++) {
      const dot = document.createElement('div');
      dot.classList.add('dot');
      if (i === 0) dot.classList.add('active');
      dot.dataset.index = i;
      dot.addEventListener('click', function() {
        goToPosition(parseInt(this.dataset.index));
      });
      dotsContainer.appendChild(dot);
    }
    
    // Set initial position
    updateCarousel();
  }
  
  // Update carousel position
  function updateCarousel() {
    // Calculate width of each product card relative to the container
    const cardWidth = 100 / productsPerView;
    
    // Translate the carousel to show the current position
    const offset = -currentIndex * cardWidth;
    carousel.style.transform = `translateX(${offset}%)`;
    
    // Update dots
    document.querySelectorAll('#featuredProductsSection .dot').forEach((dot, index) => {
      if (index === currentIndex) {
        dot.classList.add('active');
      } else {
        dot.classList.remove('active');
      }
    });
    
    // Update arrow visibility
    if (currentIndex === 0) {
      prevArrow.style.opacity = '0.5';
      prevArrow.style.pointerEvents = 'none';
    } else {
      prevArrow.style.opacity = '1';
      prevArrow.style.pointerEvents = 'auto';
    }
    
    if (currentIndex >= productCards.length - productsPerView) {
      nextArrow.style.opacity = '0.5';
      nextArrow.style.pointerEvents = 'none';
    } else {
      nextArrow.style.opacity = '1';
      nextArrow.style.pointerEvents = 'auto';
    }
  }
  
  // Go to specific position
  function goToPosition(index) {
    const maxIndex = productCards.length - productsPerView;
    
    if (index < 0) {
      currentIndex = 0;
    } else if (index > maxIndex) {
      currentIndex = maxIndex;
    } else {
      currentIndex = index;
    }
    
    updateCarousel();
  }
  
  // Event listeners
  prevArrow.addEventListener('click', function() {
    goToPosition(currentIndex - scrollAmount);
  });
  
  nextArrow.addEventListener('click', function() {
    goToPosition(currentIndex + scrollAmount);
  });
  
  // Handle touch events for swiping on mobile
  let touchStartX = 0;
  let touchEndX = 0;
  
  carousel.addEventListener('touchstart', function(e) {
    touchStartX = e.touches[0].clientX;
  });
  
  carousel.addEventListener('touchend', function(e) {
    touchEndX = e.changedTouches[0].clientX;
    handleSwipe();
  });
  
  function handleSwipe() {
    const SWIPE_THRESHOLD = 50;
    if (touchStartX - touchEndX > SWIPE_THRESHOLD) {
      // Swipe left
      goToPosition(currentIndex + scrollAmount);
    } else if (touchEndX - touchStartX > SWIPE_THRESHOLD) {
      // Swipe right
      goToPosition(currentIndex - scrollAmount);
    }
  }
  
  // Handle window resize
  window.addEventListener('resize', function() {
    // Remember which products were visible
    const firstVisibleProductIndex = currentIndex;
    
    // Reinitialize carousel
    initCarousel();
    
    // Try to keep the same products visible
    goToPosition(firstVisibleProductIndex);
  });
  
  // Initialize carousel
  initCarousel();
});





