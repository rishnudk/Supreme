/* Supreme E-commerce Header Styles */

:root {
    --primary-color: #E5574E;
    --light-gray: #F4F7F7;
    --white: #FFFFFF;
    --dark-text: #333333;
    --light-text: #777777;
    --border-color: #EEEEEE;
    --shadow-color: rgba(0, 0, 0, 0.05);
    --transition: all 0.3s ease;
}























/* General Styles */
body {
    font-family: 'Poppins', sans-serif;
    color: var(--dark-text);
    background-color: var(--white);
}

.btn-primary {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
}

.btn-primary:hover, .btn-primary:focus {
    background-color: #d84941;
    border-color: #d84941;
}

/* Announcement Bar */
.announcement-bar {
    background-color: var(--primary-color);
    color: var(--white);
    font-size: 0.85rem;
}

.announcement-text {
    letter-spacing: 0.5px;
}

/* Main Header */
.supreme-header {
    position: relative;
    background-color: var(--white);
    box-shadow: 0 2px 10px var(--shadow-color);
}

.navbar {
    padding: 0.75rem 0;
}

.logo {
    height: 38px;
    width: auto;
}

/* Navigation Menu */
.navbar-nav .nav-link {
    color: var(--dark-text);
    font-weight: 500;
    padding: 0.5rem 1rem;
    transition: var(--transition);
}

.navbar-nav .nav-link:hover,
.navbar-nav .nav-link:focus {
    color: var(--primary-color);
}

.dropdown-menu {
    border: none;
    box-shadow: 0 5px 12px var(--shadow-color);
    padding: 0.75rem 0;
    border-radius: 0.5rem;
}

.dropdown-item {
    font-size: 0.9rem;
    padding: 0.5rem 1.5rem;
    color: var(--dark-text);
    transition: var(--transition);
}

.dropdown-item:hover,
.dropdown-item:focus {
    background-color: var(--light-gray);
    color: var(--primary-color);
}

.dropdown-divider {
    margin: 0.5rem 0;
    border-color: var(--border-color);
}

/* Search Form */
.search-container {
    position: relative;
}

.search-form {
    position: relative;
    width: 220px;
}

.search-input {
    border-radius: 50px;
    padding-right: 40px;
    border: 1px solid var(--border-color);
    background-color: var(--light-gray);
    font-size: 0.9rem;
    transition: var(--transition);
}

.search-input:focus {
    box-shadow: none;
    border-color: var(--primary-color);
    background-color: var(--white);
}

.search-button {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    background: transparent;
    border: none;
    color: var(--light-text);
    transition: var(--transition);
}

.search-button:hover {
    color: var(--primary-color);
}

.search-toggle {
    cursor: pointer;
    padding: 0.5rem;
    font-size: 1.1rem;
    color: var(--dark-text);
    transition: var(--transition);
}

.search-toggle:hover {
    color: var(--primary-color);
}

/* User Navigation */
.user-nav {
    display: flex;
    align-items: center;
}

.user-nav-item {
    position: relative;
    margin-left: 1rem;
}

.user-nav-link {
    color: var(--dark-text);
    text-decoration: none;
    display: flex;
    align-items: center;
    font-size: 1rem;
    font-weight: 500;
    transition: var(--transition);
}

.user-nav-link:hover {
    color: var(--primary-color);
}

.user-nav-link i {
    font-size: 1.2rem;
}

.badge.cart-count,
.badge.wishlist-count {
    position: absolute;
    top: -8px;
    right: -8px;
    background-color: var(--primary-color);
    color: var(--white);
    font-size: 0.65rem;
    padding: 0.15rem 0.35rem;
    font-weight: 500;
    min-width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* Cart Dropdown */
.cart-dropdown {
    width: 320px;
    padding: 0;
    border-radius: 0.5rem;
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
    right: -10px;
    margin-top: 1rem;
}

.cart-header {
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.75rem;
}

.cart-empty {
    color: var(--light-text);
}

.cart-empty i {
    color: var(--border-color);
}

/* Mobile Search Overlay */
.mobile-search-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: var(--white);
    padding: 1rem 0;
    z-index: 1000;
    box-shadow: 0 2px 10px var(--shadow-color);
    transform: translateY(-100%);
    opacity: 0;
    visibility: hidden;
    transition: var(--transition);
}

.mobile-search-overlay.active {
    transform: translateY(0);
    opacity: 1;
    visibility: visible;
}

.mobile-search-form {
    position: relative;
    display: flex;
    align-items: center;
}

.mobile-search-form .form-control {
    border-radius: 50px;
    padding: 0.75rem 1.25rem;
    border: 1px solid var(--border-color);
    background-color: var(--light-gray);
    font-size: 1rem;
}

.mobile-search-form .search-button {
    position: absolute;
    right: 50px;
    padding: 0 1rem;
}

.close-search {
    background: transparent;
    border: none;
    color: var(--light-text);
    transition: var(--transition);
    padding: 0 1rem;
}

.close-search:hover {
    color: var(--primary-color);
}


/* Mobile Category Navigation */
.mobile-category-nav {
    background-color: var(--white);
    border-bottom: 1px solid var(--border-color);
    padding: 0.75rem 0;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none; /* Firefox */
}

.mobile-category-nav::-webkit-scrollbar {
    display: none; /* Chrome, Safari, Edge */
}

.mobile-categories-wrapper {
    display: flex;
    min-width: max-content;
}

.mobile-category-item {
    flex: 0 0 auto;
    text-align: center;
    padding: 0 0.75rem;
}

.mobile-category-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--dark-text);
    text-decoration: none;
    transition: var(--transition);
}

.mobile-category-link:hover {
    color: var(--primary-color);
}

.mobile-category-link i {
    font-size: 1.25rem;
    margin-bottom: 0.35rem;
}

.mobile-category-link span {
    font-size: 0.8rem;
    font-weight: 500;
}

/* Responsive Adjustments */
@media (max-width: 991.98px) {
    .navbar {
        padding: 0.5rem 0;
    }
    
    .logo {
        height: 32px;
    }
    
    .navbar-collapse {
        background-color: var(--white);
        position: absolute;
        top: 100%;
        left: 0;
        width: 100%;
        padding: 1rem;
        box-shadow: 0 5px 10px var(--shadow-color);
        z-index: 999;
    }
    
    .navbar-nav {
        max-height: 70vh;
        overflow-y: auto;
    }
    
    .navbar-nav .nav-link {
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border-color);
    }
    
    .dropdown-menu {
        box-shadow: none;
        padding: 0 0 0 1rem;
        margin: 0.5rem 0;
        border-radius: 0;
    }
    
    .dropdown-item {
        padding: 0.5rem 0;
    }
    
    .user-nav-item {
        margin-left: 0.75rem;
    }
    
    .user-nav-link span {
        display: none;
    }
}

@media (max-width: 767.98px) {
    .cart-dropdown {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        max-width: 350px;
        margin: 0;
        border-radius: 0;
        transform: translateX(100%);
        transition: transform 0.3s ease;
        z-index: 1050;
    }
    
    .cart-dropdown.show {
        transform: translateX(0);
    }
    
    .announcement-text {
        font-size: 0.75rem;
    }
}

@media (max-width: 575.98px) {
    .logo {
        height: 28px;
    }
    
    .user-nav-item {
        margin-left: 0.5rem;
    }
    
    .mobile-category-item {
        padding: 0 0.5rem;
    }
}

/* Sticky Header Effects */
.supreme-header.sticky {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    animation: slideDown 0.4s forwards;
}

@keyframes slideDown {
    from {
        transform: translateY(-100%);
    }
    to {
        transform: translateY(0);
    }
}




/* Hero Section Styles */

.hero-section {
    position: relative;
    background-color: var(--light-gray);
    overflow: hidden;
}

.carousel-inner {
    position: relative;
}

.carousel-item {
    padding: 3rem 0;
}

.hero-content-wrapper {
    padding: 2rem 0;
}

.hero-content {
    max-width: 90%;
}

.hero-subtitle {
    display: inline-block;
    background-color: rgba(229, 87, 78, 0.1);
    color: var(--primary-color);
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 0.35rem 1rem;
    border-radius: 50px;
    margin-bottom: 1.25rem;
}

.hero-title {
    font-size: 2.75rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.25rem;
    color: var(--dark-text);
}

.hero-description {
    font-size: 1.1rem;
    color: var(--light-text);
    margin-bottom: 2rem;
    max-width: 500px;
}

.hero-buttons .btn {
    padding: 0.75rem 1.75rem;
    border-radius: 4px;
    font-weight: 500;
    transition: var(--transition);
}

.hero-buttons .btn-outline-dark {
    color: var(--dark-text);
    border-color: #ddd;
}

.hero-buttons .btn-outline-dark:hover {
    background-color: var(--dark-text);
    border-color: var(--dark-text);
    color: var(--white);
}

.hero-image-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}

.hero-image {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.08);
}

/* Carousel Indicators and Controls */
.carousel-indicators {
    position: absolute;
    bottom: 20px;
    margin-bottom: 0;
}

.carousel-indicators [data-bs-target] {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: var(--primary-color);
    opacity: 0.3;
    margin: 0 5px;
    transition: var(--transition);
}

.carousel-indicators .active {
    background-color: var(--primary-color);
    opacity: 1;
    width: 10px;
    height: 10px;
}

.carousel-control-prev,
.carousel-control-next {
    width: 50px;
    height: 50px;
    top: 50%;
    transform: translateY(-50%);
    background-color: var(--white);
    border-radius: 50%;
    opacity: 1;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    transition: var(--transition);
}

.carousel-control-prev {
    left: 20px;
}

.carousel-control-next {
    right: 20px;
}

.carousel-control-prev:hover,
.carousel-control-next:hover {
    background-color: var(--primary-color);
}

.carousel-control-prev-icon,
.carousel-control-next-icon {
    width: 20px;
    height: 20px;
    background-size: 100%;
    filter: none;
}

