}

.filter-title:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -0.5rem;
  width: 2rem;
  height: 2px;
  background-color: var(--primary);
}

.price-filter, .category-filter, .color-filter, .discount-filter, .brand-filter {
