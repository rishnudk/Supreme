  background: linear-gradient(to right, var(--primary-light), var(--secondary));
  outline: none;
  border-radius: 3px;
}

#price-range::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: white;
  border: 2px solid var(--primary);
  cursor: pointer;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

#price-range::-moz-range-thumb {
  width: 18px;
  height: 18px;
  border-radius: 50%;
  background: white;
  border: 2px solid var(--primary);
  cursor: pointer;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

/* Checkbox and radio styles */
.filter-container label {
  display: flex;
  align-items: center;
  font-size: 0.9rem;
  color: var(--gray-600);
  margin-bottom: 0.5rem;
  cursor: pointer;
  transition: all 0.2s ease;
}

.filter-container label:hover {
  color: var(--gray-900);
}

.filter-container input[type="checkbox"],
.filter-container input[type="radio"] {
  margin-right: 0.75rem;
  cursor: pointer;
  accent-color: var(--primary);
}

/* Show more text */
.filter-container span {
  display: inline-block;
  font-size: 0.85rem;
  color: var(--primary);
  cursor: pointer;
  margin-top: 0.5rem;
  transition: all 0.2s ease;
}

.filter-container span:hover {
  color: var(--primary-dark);
  text-decoration: underline;
}

/* Product grid */
.container {
  flex-grow: 1;
}

.product-item {
  display: block;
  background-color: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  height: 100%;
  position: relative;
}

.product-item:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
}

.product-item:hover .product-thumbnail {
  transform: scale(1.05);
}

.product-thumbnail {
  height: 220px;
  width: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.product-title {
  padding: 1rem 1.5rem 0.5rem;
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--gray-800);
  margin-bottom: 0.25rem;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  height: 3.5rem;
}

.product-price {
  padding: 0 1.5rem 1rem;
  font-size: 1.2rem;
  color: var(--primary-dark);
  display: block;
}

.product-item .text-muted {
  padding: 0 1.5rem;
  margin-bottom: 1.5rem;
  font-size: 0.85rem;
}

.icon-cross {
  position: absolute;
  width: 35px;
  height: 35px;
  background-color: var(--primary);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 1rem;
  right: 1rem;
  opacity: 0;
  transform: translateY(10px);
  transition: all 0.3s ease;
}

.product-item:hover .icon-cross {
  opacity: 1;
  transform: translateY(0);
}

.icon-cross img {
  width: 15px;
  height: 15px;
  filter: brightness(0) invert(1);
}

/* Pagination */
.pagination {
  display: flex;
  justify-content: center;
  gap: 0.5rem;
  margin: 3rem 0;
}

.page-item {
  list-style: none;
}

.page-link {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 40px;
  height: 40px;
