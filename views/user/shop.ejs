  height: calc(100vh - 7rem);
  overflow-y: auto;
  scrollbar-width: thin;
}

.filter-container::-webkit-scrollbar {
  width: 4px;
}

.filter-container::-webkit-scrollbar-thumb {
  background-color: var(--gray-300);
  border-radius: 10px;
}

.filter-title {
