                <div class="col-lg-9 col-md-8">
                    <div class="referral-container">
                        <!-- Referral Card -->
                        <div class="referral-card">
                            <div class="referral-header">
                                <h2>Invite Friends & Earn Rewards</h2>
                                <p>Share your referral code with friends and earn 100 points for each friend who makes a purchase.</p>
                            </div>
                            
                            <!-- Referral Code -->
                            <div class="referral-code-container">
                                <p class="referral-code-title">Your Unique Referral Code</p>
                                <div class="referral-code-wrapper">
                                    <div class="referral-code" id="referralCode"><%= user.referralCode %></div>
                                    <button class="copy-btn" onclick="copyToClipboard('referralCode')">
                                        <i class="fas fa-copy"></i> Copy
                                    </button>
                                </div>
                                <p>Wallet Balance: ₹<%= user.wallet %></p>
                            </div>
                
                            <!-- Wallet Transfer Section -->
                            <div class="wallet-transfer-section">
                                <h3>Transfer to Main Wallet</h3>
                                <div class="transfer-form">
                                    <div class="input-group">
                                        <span class="input-group-text">₹</span>
                                        <input type="number" id="transferAmount" class="form-control" placeholder="Enter amount to transfer" min="1" max="<%= user.wallet %>">
                                    </div>
                                    <button class="transfer-btn" onclick="transferToMainWallet()">
                                        <i class="fas fa-exchange-alt"></i> Transfer
                                    </button>
                                </div>
                            </div>
                        </div>
                
                        <!-- Referred Users Section -->
                        <div class="referred-users-card">
                            <div class="referred-users-header">
                                <h3>Friends You've Referred</h3>
                                <p>Track all your successful referrals and their details</p>
                            </div>
                            
                            <div class="referred-users-table-container">
                                <table class="referred-users-table">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Joined On</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody id="referredUsersTable">
                                        <% if(referredUsers && referredUsers.length > 0) { %>
                                            <% referredUsers.forEach(function(user) { %>
                                                <tr>
                                                    <td><%= user.name %></td>
                                                    <td><%= user.email %></td>
                                                    <td><%= new Date(user.createdAt).toLocaleString() %></td>
                                                    <td><span class="status-badge <%= user.status === 'Active' ? 'success' : 'pending' %>">
