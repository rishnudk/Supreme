    width: 100%;
    outline: none;
    transition: border-color 0.3s;
}

#transferAmount:focus {
    border-color: #4e73df;
    box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
}

.transfer-btn {
    background: #1cc88a;
    color: white;
    border: none;
    padding: 12px 20px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
    white-space: nowrap;
}

.transfer-btn:hover {
    background: #169c6b;
    transform: scale(1.05);
}

/* Referred Users Table */
.referred-users-table-container {
    overflow-x: auto;
    margin-bottom: 20px;
}

.referred-users-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
}

.referred-users-table th {
    background-color: #f8f9fc;
    color: #5a5c69;
    font-weight: 700;
    padding: 15px;
    text-align: left;
    border-bottom: 2px solid #e3e6f0;
}

.referred-users-table td {
    padding: 15px;
    border-bottom: 1px solid #e3e6f0;
    color: #6e707e;
}

.referred-users-table tbody tr:hover {
    background-color: #f8f9fc;
}

.status-badge {
    padding: 5px 10px;
    border-radius: 50px;
    font-size: 12px;
    font-weight: 600;
}

.status-badge.success {
    background-color: #e6f9f0;
    color: #1cc88a;
}

.status-badge.pending {
    background-color: #fff8dd;
    color: #f6c23e;
}

.no-referrals {
    text-align: center;
    color: #858796;
    font-style: italic;
}

/* Pagination */
.pagination-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
}

.load-more-btn {
    background: #4e73df;
    color: white;
    border: none;
    padding: 12px 25px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
}

.load-more-btn:hover {
    background: #375bcc;
}

.load-more-btn i {
    margin-right: 5px;
}

.page-indicator {
    color: #858796;
    font-size: 14px;
    margin: 0;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .transfer-form {
        flex-direction: column;
    }
    
    .transfer-btn {
        width: 100%;
    }
    
    .referral-card, .referred-users-card {
        padding: 20px;
    }
}



